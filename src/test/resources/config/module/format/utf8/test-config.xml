<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
		   http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	
		<!-- UTF-8 module bean -->
	<bean id="UTF8Module" class="org.jhove2.module.format.utf8.UTF8Module"
	      scope="prototype">
	    <constructor-arg ref="UTF8Format"/>
	     <property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
			</list>
		</property>
	</bean>
	
		<!-- UTF-8 format bean -->
	<bean id="UTF8Format" class="org.jhove2.core.Format" scope="singleton">
		<constructor-arg type="java.lang.String" value="UTF-8"/>
		<constructor-arg ref="UTF8Identifier"/>
		<constructor-arg type="org.jhove2.core.Format$Type" value="Family"/>
		<constructor-arg type="org.jhove2.core.Format$Ambiguity" value="Unambiguous"/>
		<property name="aliasNames">
			<set>
				<value>UCS Transformation Format, 8 bit</value>
				<value>Unicode Transformation Format, 8 bit</value>
			</set>
		</property>
	</bean>
	
	
		<!-- UTF-8 identifier bean -->  
	<bean id="UTF8Identifier" class="org.jhove2.core.I8R" scope="singleton">
		<constructor-arg type="java.lang.String" value="info:jhove2/format/utf-8"/>
	</bean>
	
	
	<!-- C0 Control properties bean -->
	<util:properties id="C0Control"	
		             location="classpath:properties/unicode/c0control.properties"/>
	
	<!-- C1 Control properties bean -->
	<util:properties id="C1Control"	
		             location="classpath:properties/unicode/c1control.properties"/>

	<!-- Codeblock properties bean -->
	<util:properties id="CodeBlock"	
		             location="classpath:properties/unicode/codeblock.properties"/>

</beans>
