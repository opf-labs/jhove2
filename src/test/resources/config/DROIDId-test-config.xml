<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
		   http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="propertyConfigurer" 
    	class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="locations">
    		<list>
    			<value>properties/filepath.properties</value>
<!--    			<value>properties/droidconfig.properties</value>-->
    		</list>
    	</property>
    </bean>
    	
	 
	<!--  you will need to edit the samplesDirPath property to run on your machine -->
	<bean id="samplesDirPath" class="java.lang.String" >
		<constructor-arg type="java.lang.String" 
	        value="${dir.example.droid}"/>
	</bean>
	
	<bean id="sampleFile" class="java.lang.String" >
	<constructor-arg type="java.lang.String" 
	        value="two-files.zip"/>
	</bean>
	
		<bean id="sampleFilePUID" class="java.lang.String" >
	<constructor-arg type="java.lang.String" 
	        value="x-fmt/263"/>
	</bean>

	<bean id="sampleBadFile" class="java.lang.String" >
	<constructor-arg type="java.lang.String" 
	        value="unidentifiable.totallymadeupextension"/>
	</bean>
	
	<bean id="sampleNoFormatFile" class="java.lang.String">
	<constructor-arg type="java.lang.String" 
	        value="sample.xml"/>
	</bean>
	
		<bean id="sampleNoJhoveIdFile" class="java.lang.String">
	<constructor-arg type="java.lang.String" 
	        value="sample.doc"/>
	</bean>
	
	
</beans>
