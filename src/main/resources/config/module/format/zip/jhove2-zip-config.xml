<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
		   http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-2.0.xsd">
	
			     	

	<!-- Zip module bean -->
	<bean id="ZipModule" class="org.jhove2.module.format.zip.ZipModule"
	      scope="prototype">
	    <constructor-arg ref="ZipFormat"/>
		<property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
	</bean>
      
	<!-- Zip format bean -->
	<bean id="ZipFormat" class="org.jhove2.core.Format" scope="singleton">
		<constructor-arg type="java.lang.String" value="Zip"/>
		<constructor-arg ref="ZipIdentifier"/>
		<constructor-arg type="org.jhove2.core.Format$Type" value="Family"/>
		<constructor-arg type="org.jhove2.core.Format$Ambiguity" value="Unambiguous"/>
	</bean>
		
	<!-- Zip identifier bean -->  
	<bean id="ZipIdentifier" class="org.jhove2.core.I8R" scope="singleton">
		<constructor-arg type="java.lang.String" value="http://jhove2.org/terms/format/zip"/>
	</bean>
	

</beans>		   