<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
		   http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="propertyConfigurer" 
    	class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="locations">
    		<list>
    			<value>properties/filepath.properties</value>
    		</list>
    	</property>
    </bean>   	
		   
	<!-- JHOVE2 command line application bean -->
	<bean id="JHOVE2CommandLine" class="org.jhove2.app.JHOVE2CommandLine"
	    scope="prototype"/>

	<!-- JHOVE2 framework bean -->
	<bean id="JHOVE2" class="org.jhove2.core.JHOVE2" scope="prototype">
		<property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
				<property name="commands">
			<list value-type="org.jhove2.core.JHOVE2Command">
				<ref bean="IdentifierCommand"/>
				<ref bean="FeatureExtractorCommand"/>
				<ref bean="AggrefierCommand"/>
				<ref bean="DigesterCommand"/>
			</list>
		</property>
	</bean>
	
	<!-- Identifier command bean -->
	<bean id="IdentifierCommand" class="org.jhove2.module.identify.IdentifierCommand"
	 	scope="singleton">
	 	 <property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
	</bean>

	<!-- Format Feature extraction command bean -->
	<bean id="FeatureExtractorCommand" class="org.jhove2.module.format.FeatureExtractorCommand"
	      scope="singleton">
	    <property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
	</bean>
	
	<!-- Aggrefier Command Bean -->
	<bean id="AggrefierCommand" class="org.jhove2.module.identify.AggrefierCommand"
		scope="singleton" >
		 <property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
	</bean>    

	<!--  Digester Command module bean -->  
	<bean id="DigesterCommand"
		  class="org.jhove2.module.digest.DigesterCommand"
		  scope="singleton">
		   <property name="developers">
			<list value-type="org.jhove2.core.Agent">
				<ref bean="CDLAgent"/>
				<ref bean="PorticoAgent"/>
				<ref bean="StanfordAgent"/>
			</list>
		</property>
    </bean>

	<!-- CDL agent bean -->
	<bean id="CDLAgent" class="org.jhove2.core.Agent" scope="singleton">
		<constructor-arg type="java.lang.String" value="California Digital Library"/>
		<constructor-arg type="org.jhove2.core.Agent$Type" value="Corporate"/>
		<property name="URI" value="http://www.cdlib.org/"/>
	</bean>
		
	<!-- Portico agent bean -->
	<bean id="PorticoAgent" class="org.jhove2.core.Agent" scope="singleton">
		<constructor-arg type="java.lang.String" value="Portico"/>
		<constructor-arg type="org.jhove2.core.Agent$Type" value="Corporate"/>
		<property name="URI" value="http://www.portico.org/"/>
	</bean>
		
	<!-- Stanford agent bean -->
	<bean id="StanfordAgent" class="org.jhove2.core.Agent" scope="singleton">
		<constructor-arg type="java.lang.String" value="Stanford University"/>
		<constructor-arg type="org.jhove2.core.Agent$Type" value="Corporate"/>
		<property name="URI" value="http://www.stanford.edu/"/>
	</bean>
	
	
	<!-- Display visibility properties bean -->
	<util:properties id="DisplayVisibility"
	                 location="classpath:properties/displayer.properties"/>

	<!-- Dispatch map properties bean -->
	<util:properties id="DispatchMap"	
		             location="classpath:properties/dispatcher.properties"/>		             
		             
    <!--  JHOVE2 identifier to Format Bean Name properties bean -->
		<util:properties id="FormatBeanMap"	
		             location="classpath:properties/format2bean.properties"/>	
		             
    <!--  BEAN for message properties files (used for I18N ) -->
    <!--    NOTE  BEAN MUST HAVE id "messageSource" -->
    <bean id="messageSource" 
          class="org.springframework.context.support.ResourceBundleMessageSource">
          <property name="basename" >
             <!--  base name for localized message template properties files -->
          	<value>properties.messages</value>
          </property>
    </bean>


</beans>
